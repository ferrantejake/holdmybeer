{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": false,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "preserveConstEnums": true,
        "target": "ES6",
        "allowJs": true
    },
    "filesGlob": [
        "typings/index.d.ts",
        "app/src/**/*.ts"
    ],
    "compileOnSave": false,
    "exclude": [
        "node_modules"
    ]
}