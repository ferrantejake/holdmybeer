{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "removeComments": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "preserveConstEnums": true,
        "target": "ES6",
        "allowJs": true
    },
    "compileOnSave": false,
    "include": [
        "typings/index.d.ts",
        "app/src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}